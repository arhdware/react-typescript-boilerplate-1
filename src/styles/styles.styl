@import "reset.css";

body {
    background: #ddd;
}

h1, h2, h3 {
    font-weight: bold;
}
h1 {
    font-size: 24px;
}
h2 {
    font-size: 20px;
}
h3 {
    font-size: 16px;
}

h1, h2, h3, p, table {
    margin-bottom: 15px;
}

table.table {
    width: 100%;
    border: 1px solid #888;
}
table.table {
    tr, td, th {
        border: 1px solid #888;
        text-align: left;
    }
    th {
        font-weight: bold;
        background: #eee;
    }
    td, th {
        padding: 5px 10px;
        width: auto;
    }
}

pre.code {
    white-space: pre;
    font-family: monospace;
    text-align: left;
    border: 1px solid #ccc;
    background: #eee;
    padding: 10px 20px;
}

#application {
    background: #fff;
    border: 10px solid #eee;
    margin: 80px;
    padding: 80px;
    border-radius: 20px;
    text-align: center;
    line-height: 1.6;
    font-family: sans-serif;
}

